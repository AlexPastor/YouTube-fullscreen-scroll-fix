{
  "manifest_version": 3,
  "name": "YouTube Fullscreen Scroll Fix",
  "version": "1.0.2",
  "description": "Adds back support on Youtube for scrolling when watching videos on fullscreen",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Fullscreen Scroll Fix",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}