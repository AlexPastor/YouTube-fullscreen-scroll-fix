{
  "manifest_version": 3,
  "name": "YouTube Fullscreen Scroll Fix",
  "version": "1.0",
  "description": "Adds back support on Youtube for scrolling when watching videos on fullscreen",
  "permissions": ["storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
